{
    "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],
    "singleQuote": true,
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 2
            }
        },
        {
            "files": ["*.js", "*.ts", "*.vue"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
